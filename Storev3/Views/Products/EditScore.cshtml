@model Userscore

<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title">Оценка</h4>
        <button type="button" class="close btn" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body text-center">
        <div class="row">
            <div class="coll-md-4">
                <form asp-action="EditScore">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="@Model.Userscoreid" />
                    <input type="hidden" asp-for="@Model.Userid" />
                    <input type="hidden" asp-for="@Model.Productid" />
                    <div class=" form-group">
                        <label asp-for="Score" class="control-label">Оценка</label>
                        <input asp-for="Score" class="form-control" />
                        <span asp-validation-for="Score" class="text-danger"></span>
                    </div>
                    <h1></h1>
                    <div class="form-group">
                        <input type="submit" value="Изменить" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>