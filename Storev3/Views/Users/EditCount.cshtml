@model Productorder

<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title">Изменить количество</h4>
        <button type="button" class="close btn" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body text-center">
    <div class="row">
        <div class="coll-md-4">
            <form asp-action="EditCount">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Productorderid"/>
                <input type="hidden" asp-for="@Model.Productid"/>
                <input type="hidden" asp-for="@Model.Orderid" />
                <div class=" form-group">
                    <label asp-for="Count" class="control-label">Количество</label>
                    <input asp-for="Count" class="form-control"/>
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
                <h1></h1>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
