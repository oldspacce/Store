@model User

@{
    ViewData["Title"] = "Личный кабинет";
}

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Фамилия
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            Имя
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Отчество
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patronymic)
        </dd>
        <dt class = "col-sm-2">
           Логин
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Login)
        </dd>
        <dt class = "col-sm-2">
            Телефон
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
    </dl>
</div>
<div>
    <a class="text-black" asp-action="UserOrders" asp-route-id="@Model?.Userid">Заказы</a>
</div>
<div>
    <a class="text-black" asp-action="Edit" asp-route-id="@Model?.Userid">Изменить</a> | 
    <a class="text-black" asp-action="Delete" asp-route-id="@Model?.Userid">Удалить аккаунт</a>
</div>
