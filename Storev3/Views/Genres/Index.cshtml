@model IEnumerable<Genre>

@{
    ViewData["Title"] = "Index";
}

<h1>Жанры</h1>

<p>
    <a asp-action="Create">Добавить новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Жанр
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Genreid">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.Genreid">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.Genreid">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
