@model ProductIndexData
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Details";
}



    @foreach (var item in Model.Products){

    <h1>@Html.DisplayFor(ModelItem => item.Name)</h1>
    <hr />
    <div>
    <dl class="row">
        <dt class="col-sm-2">
            Наименование
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.Name)
        </dd>
        <dt class="col-sm-2">
            Бренд
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.Brand.Name)
        </dd>
        <dt class="col-sm-2">
            Производитель
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.Manufacturer.Name)
        </dd>
        <dt class="col-sm-2">
            Жанр
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.Genre.Name)
        </dd>
        <dt class="col-sm-2">
            Возраст
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.Age)
        </dd>
        <dt class="col-sm-2">
            Оценка
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.Score)
        </dd>
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.Cost)
        </dd>
    </dl>
</div>
    <div>
        @if (User.Identity.IsAuthenticated && !User.IsInRole("admin"))
        {
            <a class="nav-link text-dark" asp-controller="Products" asp-action="AddCart" asp-route-id="@item.Productid">Добавить в корзину</a>
        }
        else if(!User.IsInRole("admin")){
            <a class="nav-link text-dark" asp-controller="Users" asp-action="Create">Добавить в корзину</a>
        }
    </div>
}

