@model IEnumerable<Pointofissue>

@{
    ViewData["Title"] = "Index";
}

<h1>Места доставки</h1>

<p>
    <a asp-action="Create">Добавить новое</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Адрес
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Pointid">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.Pointid">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.Pointid">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
